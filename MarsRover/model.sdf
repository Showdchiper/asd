<?xml version="1.0" ?>
<sdf version="1.9">
  <model name="mars_curiosity_rover">
    <static>false</static>
    <self_collide>false</self_collide>
    
    <!-- Base Link - Main body of the rover -->
    <link name="base_link">
      <pose>0 0 0.35 0 0 0</pose>
      
      <inertial>
        <mass>100.0</mass>
        <inertia>
          <ixx>10.0</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>15.0</iyy>
          <iyz>0</iyz>
          <izz>10.0</izz>
        </inertia>
      </inertial>
      
      <collision name="collision">
        <geometry>
          <box>
            <size>2.0 1.5 0.5</size>
          </box>
        </geometry>
      </collision>
      
      <visual name="visual">
        <pose>0 0 -0.35 0 0 1.5708</pose>
        <geometry>
          <mesh>
            <uri>model://MarsRover/mars_rover.dae</uri>
            <scale>1 1 1</scale>
          </mesh>
        </geometry>
      </visual>
      
      <!-- 3D GPU LiDAR - 32-channel, 10 Hz, 120m range -->
      <!-- Velodyne VLP-32C style sensor for lunar terrain navigation -->
      <sensor name="gpu_lidar" type="gpu_lidar">
        <pose>0 0 0.6 0 0 0</pose>
        <topic>lidar</topic>
        <update_rate>10</update_rate>
        <always_on>true</always_on>
        <visualize>true</visualize>
        <lidar>
          <scan>
            <horizontal>
              <samples>2048</samples>
              <resolution>1</resolution>
              <min_angle>-3.14159</min_angle>
              <max_angle>3.14159</max_angle>
            </horizontal>
            <vertical>
              <samples>32</samples>
              <resolution>1</resolution>
              <min_angle>-0.4363</min_angle>
              <max_angle>0.4363</max_angle>
            </vertical>
          </scan>
          <range>
            <min>0.05</min>
            <max>120.0</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.02</stddev>
          </noise>
        </lidar>
      </sensor>
    </link>
    
    <!-- Left Front Wheel -->
    <link name="left_front_wheel">
      <pose>0.7 0.85 0.15 -1.5707963 0 0</pose>
      <inertial>
        <mass>5.0</mass>
        <inertia>
          <ixx>0.1</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.1</iyy><iyz>0</iyz>
          <izz>0.15</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder><radius>0.2</radius><length>0.15</length></cylinder>
        </geometry>
        <surface>
          <friction><ode><mu>1.2</mu><mu2>1.2</mu2></ode></friction>
        </surface>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder><radius>0.2</radius><length>0.15</length></cylinder>
        </geometry>
        <material><ambient>0 0 0 0</ambient><diffuse>0 0 0 0</diffuse></material>
      </visual>
    </link>
    <joint name="left_front_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_front_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit><effort>100</effort><velocity>10</velocity></limit>
      </axis>
    </joint>
    
    <!-- Right Front Wheel -->
    <link name="right_front_wheel">
      <pose>0.7 -0.85 0.15 -1.5707963 0 0</pose>
      <inertial>
        <mass>5.0</mass>
        <inertia>
          <ixx>0.1</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.1</iyy><iyz>0</iyz>
          <izz>0.15</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder><radius>0.2</radius><length>0.15</length></cylinder>
        </geometry>
        <surface>
          <friction><ode><mu>1.2</mu><mu2>1.2</mu2></ode></friction>
        </surface>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder><radius>0.2</radius><length>0.15</length></cylinder>
        </geometry>
        <material><ambient>0 0 0 0</ambient><diffuse>0 0 0 0</diffuse></material>
      </visual>
    </link>
    <joint name="right_front_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_front_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit><effort>100</effort><velocity>10</velocity></limit>
      </axis>
    </joint>
    
    <!-- Left Rear Wheel -->
    <link name="left_rear_wheel">
      <pose>-0.7 0.85 0.15 -1.5707963 0 0</pose>
      <inertial>
        <mass>5.0</mass>
        <inertia>
          <ixx>0.1</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.1</iyy><iyz>0</iyz>
          <izz>0.15</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder><radius>0.2</radius><length>0.15</length></cylinder>
        </geometry>
        <surface>
          <friction><ode><mu>1.2</mu><mu2>1.2</mu2></ode></friction>
        </surface>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder><radius>0.2</radius><length>0.15</length></cylinder>
        </geometry>
        <material><ambient>0 0 0 0</ambient><diffuse>0 0 0 0</diffuse></material>
      </visual>
    </link>
    <joint name="left_rear_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_rear_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit><effort>100</effort><velocity>10</velocity></limit>
      </axis>
    </joint>
    
    <!-- Right Rear Wheel -->
    <link name="right_rear_wheel">
      <pose>-0.7 -0.85 0.15 -1.5707963 0 0</pose>
      <inertial>
        <mass>5.0</mass>
        <inertia>
          <ixx>0.1</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.1</iyy><iyz>0</iyz>
          <izz>0.15</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder><radius>0.2</radius><length>0.15</length></cylinder>
        </geometry>
        <surface>
          <friction><ode><mu>1.2</mu><mu2>1.2</mu2></ode></friction>
        </surface>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder><radius>0.2</radius><length>0.15</length></cylinder>
        </geometry>
        <material><ambient>0 0 0 0</ambient><diffuse>0 0 0 0</diffuse></material>
      </visual>
    </link>
    <joint name="right_rear_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_rear_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit><effort>100</effort><velocity>10</velocity></limit>
      </axis>
    </joint>
    
    <!-- Differential Drive Plugin -->
    <plugin filename="ignition-gazebo-diff-drive-system"
            name="ignition::gazebo::systems::DiffDrive">
      <left_joint>left_front_wheel_joint</left_joint>
      <left_joint>left_rear_wheel_joint</left_joint>
      <right_joint>right_front_wheel_joint</right_joint>
      <right_joint>right_rear_wheel_joint</right_joint>
      <wheel_separation>1.7</wheel_separation>
      <wheel_radius>0.2</wheel_radius>
      <odom_publish_frequency>10</odom_publish_frequency>
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
      <tf_topic>/tf</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>
    
  </model>
</sdf>